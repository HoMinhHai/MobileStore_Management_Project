<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Concert+One&family=Roboto+Mono:wght@300;400;500;600;700&family=Roboto:wght@100;300;400;500;700&family=Rubik:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" />
    <title>Admin &#8211; 136 Mobile</title>
    <link href="~/Assets/Css/validate.css" rel="stylesheet" />
    <link href="~/Assets/Css/shared.css" rel="stylesheet" />
    <link href="~/Assets/Css/base.css" rel="stylesheet" />
    <link href="~/Assets/Css/m_p.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.2.min.js" integrity="sha256-2krYZKh//PcchRtd+H+VyyQoZ/e3EcrkxhM8ycwASPA=" crossorigin="anonymous"></script>
    <script src="~/Assets/Script/validate.js"></script>
    <script src="~/Assets/Script/main.js"></script>
    <style>
        label {
            margin: 0;
        }

        body {
            background: #3e3e3f;
            overflow: hidden;
        }

        .grid.wide {
            padding: 0;
        }

        #side-bar {
            background: #3b3a3a;
            color: #fff;
            height: 100vh;
            overflow: auto;
            flex-basis: 20%;
        }

        .heading {
            height: 60px;
            background: #3b3a3a;
            color: #fff;
        }

        .heading .title {
            font-size: 1.8rem;
        }

        .title a {
            color: #fff!important;
        }

        #content {
            background: #fff;
            flex-basis: 80%;
            height: 100vh;
            overflow: auto;
            padding: 0;
        }

        .navigation {
            font-size: 2rem;
        }

        .navigation .nav__item {
            padding: 13.6px 20px;
            cursor: pointer;
            border-left: 5px solid transparent;
            transition: all 0.3s linear;
        }

        .navigation .nav__item.active {
            background: #5555ef;
            color: #fff;
            border-left: 5px solid #fff;
        }

        .nav__item:hover {
            background: #5555ef;
            color: #fff;
            border-left: 5px solid #fff;
        }

        a {
            color: blue !important;
            text-decoration: none !important;
        }

        .detail {
            text-decoration: none !important;
        }

        .form__group {
            height: 50px;
        }

        .form__group input[type=text] {
            height: 100%;
        }

        .form__group .title {
            font-weight: 500;
            padding-left: 12px;
            font-size: 1.4rem;
            flex-basis: 200px;
        }

        .form__group button,
        .refresh-btn {
            border: none;
            outline: none;
            margin: 0 12px;
            width: 90px;
            border-radius: 10px;
            padding: 8px 0;
            color: #333;
            background: #ccc;
            text-align: center;
            cursor: pointer;
        }

        .form__group button:hover,
        .refresh-btn:hover {
            background: #5555ef;
            color: #fff;
        }


        table {
            border-collapse: collapse;
            width: 100%;
        }

        table input {
            width: 100%;
            border: none;
        }

        th, td {
            padding: 6px 12px;
            text-align: center;
            border-right: 1px solid #ccc;
        }

        tr th {
            padding: 15px 0 !important;
        }

        tr th:last-child {
            border-right: none
        }

        tr td:last-child {
            border-right: none
        }


        tr.row-item:active {
            opacity: 0.9;
            transform: scale(0.999);
        }

        tr.row-item.active {
            background: #5555ef;
            color: #fff;
        }

        tr.row-item:hover {
            background: #5555ef;
            color: #fff;
            cursor: pointer;
        }

        td {
            border: 1px solid #ccc;
            padding: 16px 12px !important;
            color: inherit;
            vertical-align: middle !important;
        }

        th {
            border-bottom: 2px solid #ccc;
        }

        .form__group.form__group--invalid {
            height: auto;
        }

        .form__group.form__group--invalid input {
            height: 50px;
        }

        #admin__form {
            position: fixed;
            top: 0;
            right: 0;
            left: 20%;
            background: #fff;
            box-shadow: 0 5px 5px rgba(0,0,0,0.2);
        }
        .success-container,
        .error-container {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: scale(0) translate(-50%, -50%);
            opacity: 0;
            transform-origin: 5% bottom;
            background: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.5);
            border-radius: 20px;
            text-align: center;
            font-size: 2rem;
            padding: 20px;
            transition: all 0.3s linear;
        }

        .success-container.active,
        .error-container.active {
            transform: scale(1) translate(-50%, -50%);
            opacity: 1;
        }

        .success-container button,
        .error-container button {
            margin: 0;
            margin-top: 20px;
            border-radius: 5px;
            border: none;
            font-size: 1.5rem;
            background: #cccccc;
            outline: none;
        }

        .success-container button:hover,
        .error-container button:hover {
            background: #5555ef;
            color: #fff;
        }

        #admin__form select,
        #admin__form input {
            flex: 1;
        }

        .heading i {
            height: 35px;
            width: 35px;
            line-height: 35px;
            background: #fff;
            border-radius: 50%;
            text-align: center;
            color: #3b3a3a;
            font-size: 1.5rem;
            cursor: pointer;
            margin-right: 20px;
        }

        .heading i:hover {
            transform: scale(1.1);
        }

        .detail__item {
            padding: 12px 0;
        }

        .detail__item .title {
            font-size: 1.5rem;
            width: 200px;
            font-weight: 500;
        }

        .detail__item .info {
            font-size: 1.5rem;
        }

        /* Table Heading */
        .table-heading {
            position: sticky;
            background: #fff;
        }

        .table-heading th {
            border-top: none;
            border-bottom: none;
        }

        .table-heading::after {
            position: absolute;
            content: "";
            width: 100%;
            height: 1.5px;
            background: #ddd;
            left: 0;
            top: calc( 100% - 1px);
        }
    </style>
</head>
<body class="relative">
    <div class="grid wide">
        <div class="main">
            <div class="row">
                <div id="side-bar">
                    <div class="navigation">
                        <div class="nav__item active" data-link="/NhaPhanPhoi/Index">
                            <p class="title">Nhà phân phối</p>
                        </div>
                        <div class="nav__item" data-link="/NhanVien/Index">
                            <p class="title">Nhân viên</p>
                        </div>
                        <div class="nav__item" data-link="/KhachHang/Index">
                            <p class="title">Khách hàng</p>
                        </div>
                        <div class="nav__item" data-link="/SanPham/Index">
                            <p class="title">Sản phẩm</p>
                        </div>
                        <div class="nav__item" data-link="/DonHang/Index">
                            <p class="title">Đơn hàng</p>
                        </div>
                        <div class="nav__item" data-link="/HoaDon/Index">
                            <p class="title">Hóa đơn</p>
                        </div>
                        <div class="nav__item" data-link="/ChatBox/Index">
                            <p class="title">Trò chuyện</p>
                        </div>
                        <div class="nav__item">
                            <p class="title">
                                <a href="/DangNhap/Index">Đăng xuất</a>
                            </p>
                        </div>
                    </div>
                </div>

                <div id="content">
                    
                </div>
            </div>
        </div>
    </div>

    <script>
        var navItems = $(".nav__item");

        RenderLayout();

        Array.from(navItems).forEach(navItem => {
            navItem.addEventListener("click", e => {
                $(".nav__item.active").removeClass("active");
                navItem.classList.add("active");

                RenderLayout();
            });
        });

        function RenderLayout() {
            var navItem = $(".nav__item.active");
            
            $.ajax({
                url: navItem.data("link"),
                success: function (result) {
                    $("#content").html(result);
                }
            });
        }

        function RefreshAnimate() {
            var inputs = $("#admin__form input[type='text']");

            Array.from(inputs).forEach(input => {
                input.addEventListener("click", (e) => {
                    var parentInput = getParentElement(e.target, ".form__item");

                    parentInput.classList.add("active");
                    parentInput.classList.replace("non-active", "active");
                });

                input.addEventListener("blur", (e) => {
                    var parentInput = getParentElement(e.target, ".form__item");
                    var text = parentInput.querySelector("input").value;

                    if (text.trim() === "") {
                        parentInput.classList.replace("active", "non-active");
                        parentInput.classList.remove("success");
                    }
                    else {
                        parentInput.classList.add("success");
                        parentInput.classList.replace("non-active", "active");
                    }
                });

                if (input.value !== "") {
                    var parent = getParentElement(input, ".form__group");

                    if (parent) {
                        parent.classList.add("active", "success");
                        parent.classList.remove("non-active");
                    }
                }
                else {
                    var parent = getParentElement(input, ".form__group");

                    if (parent) {
                        parent.classList.remove("active", "success");
                        parent.classList.add("non-active");
                    }
                }
            });
        }

        function ClearValidate() {
            var invalids = $(".form__group.form__group--invalid");

            Array.from(invalids).forEach(invalid => {
                invalid.classList.remove("form__group--invalid");
            });
        }
    </script>
</body>
</html>